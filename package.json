{
    "name"       : "better-formate",
    "displayName": "better-formate: CSS/LESS/SCSS formatter",
    "publisher"  : "SmileSB101",
    "author"     : {
        "name": "SmileSB101"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SmileSB1O1/better-formate"
    },
    "bugs": {
        "url": "https://github.com/SmileSB1O1/better-formate/issues"
    },
    "homepage": "https://github.com/SmileSB1O1/better-formate",
    "icon": "images/formateicon.PNG",
    "galleryBanner": {
        "color": "#333",
        "theme": "dark"
    },
    "description": "better-formate is a CSS/LESS/SCSS format extension to format properties and align property values to improve readability.",
    "version": "1.2.2",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Formatters"
    ],
    "keywords": [
    "formate",
    "better-formate",
        "css",
        "sass",
        "scss",
        "less",
        "formatter",
        "format",
        "beautify",
        "beautifier",
        "code-quality"
    ],
    "activationEvents": [
        "onCommand:extension.better-formate",
        "onLanguage:css",
        "onLanguage:less",
        "onLanguage:scss",
        "onLanguage:sass"
    ],
    "main": "./out/extension",
    "contributes": {
        "type": "object",
        "configuration": {
            "title": "better-formate",
            "properties": {
                "better-formate.enable": {
                    "scope"      : "resource",
                    "type"       : "boolean",
                    "default"    : true,
                    "description": "Controls whether better-formate is enabled or not."
                },
                "better-formate.verticalAlignProperties": {
                    "scope": "resource",
                    "type": [
                        "boolean",
                        "string"
                    ],
                    "default": true,
                    "enum": [
                        true,
                        false,
                        "allFile"
                    ],
                    "enumDescriptions": [
                        "Enable vertical alignment (per selector/group).",
                        "Disable vertical alignment.",
                        "Align all properties in the entire file to the same column."
                    ],
                    "description": "Vertical align properties. Set to true for per-selector alignment, or 'allFile' to align across the entire file."
                },
                "better-formate.alignColon": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Whether better-formate should align on the colon or the CSS property value."
                },
                "better-formate.additionalSpaces": {
                    "scope": "resource",
                    "type": "number",
                    "default": 0,
                    "description": "Whether better-formate adds more spaces."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "license": "MIT",
    "dependencies": {
        "@types/js-beautify": "^1.13.3",
        "js-beautify": "^1.14.0",
        "ts-node": "^10.3.0"
    },
    "devDependencies": {
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.8",
        "tslint": "^5.20.1",
        "typescript": "^4.4.4",
        "vscode": "^1.1.37"
    }
}
